<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--<style name="Theme.Bus_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="Theme.Bus_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_normal</item>
        <item name="colorPrimaryVariant">@color/blue_lightness</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomBar">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/blue_lightness</item>
        <item name="itemTextColor">@color/blue_lightness</item>
    </style>

    <style name="title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/blue_normal</item>
        <item name="android:textFontWeight">100</item>

    </style>
</resources>
