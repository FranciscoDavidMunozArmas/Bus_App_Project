<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/tool_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="18dp"
                    android:textColor="@color/blue_dark"/>
                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="15dp"
                    android:textColor="@color/blue_normal"
                    android:layout_below="@+id/username"/>

            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_setting_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:elevation="35dp"
                android:backgroundTint="@color/blue_normal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                app:tint="@color/white"
                android:src="@drawable/ic_settings" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_frame"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/circle_layout"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/cicle_shape"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textSize="50dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:layout_below="@+id/circle_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <Button
                        android:id="@+id/btnPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago"
                        android:background="@drawable/btn_layer"
                        android:layout_margin="5dp"/>

                    <Button
                        android:id="@+id/btnRecharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recarga"
                        android:background="@drawable/btn_layer"
                        android:layout_margin="5dp"/>
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</FrameLayout>