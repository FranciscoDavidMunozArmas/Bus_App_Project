<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".HomePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/tool_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="18dp"
                        android:textColor="@color/blue_dark"/>
                    <TextView
                        android:id="@+id/user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="15dp"
                        android:textColor="@color/blue_normal"
                        android:layout_below="@+id/username"/>

                </RelativeLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fbtn_setting_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:backgroundTint="@color/blue_normal"
                    android:elevation="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="16dp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_settings" />

                <RelativeLayout
                    android:id="@+id/floating_container_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/fbtn_setting_main"
                    android:background="@drawable/card_bg"
                    android:backgroundTint="@color/white_transparent"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/cb_floating_position_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Right Hand"/>
                    <CheckBox
                        android:id="@+id/cb_floating_nfc_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NFC"
                        android:layout_below="@+id/cb_floating_position_home"/>
                </RelativeLayout>

            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="100dp">

            <RelativeLayout
                android:id="@+id/circle_layout"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/cicle_shape"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textSize="50dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:layout_below="@+id/circle_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <Button
                        android:id="@+id/btnPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago"
                        android:background="@drawable/btn_layer"
                        android:layout_margin="5dp"/>

                    <Button
                        android:id="@+id/btnRecharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recarga"
                        android:background="@drawable/btn_layer"
                        android:layout_margin="5dp"/>
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</FrameLayout>